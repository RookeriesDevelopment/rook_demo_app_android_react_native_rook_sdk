{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "types": [
      "react-native",
      "jest",
      "node"
    ],
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "types/*": [
        "./@types/*",
        "./lib/typescript/*"
      ]
    }
  }
}
